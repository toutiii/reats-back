{
  "AWSEBDockerrunVersion": 3,
  "containerDefinitions": [
    {
      "name": "web",
      "image": "python:3.10-slim",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000
        }
      ],
      "environment": [
        { "name": "DJANGO_SETTINGS_MODULE", "value": "source.settings" },
        { "name": "AWS_REGION", "value": "eu-central-1" },
        { "name": "POSTGRES_DB", "value": "reats_dev_db" },
        { "name": "POSTGRES_USER", "value": "dev" },
        { "name": "POSTGRES_PASSWORD", "value": null },
        { "name": "DB_HOST", "value": "db" }
      ],
      "links": ["db"],
      "dependsOn": [
        {
          "containerName": "db",
          "condition": "START"
        }
      ]
    },
    {
      "name": "db",
      "image": "postgres:15",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 5432
        }
      ],
      "environment": [
        { "name": "POSTGRES_DB", "value": "reats_dev_db" },
        { "name": "POSTGRES_USER", "value": "dev" },
        { "name": "POSTGRES_PASSWORD", "value": null }
      ]
    }
  ]
}

