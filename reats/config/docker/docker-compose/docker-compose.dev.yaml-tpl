version: '3.7'

services:
  web:
    build:
        context: ..
        dockerfile: ./reats/Dockerfile
    ports:
      - '8000:8000'
    depends_on:
      - db
    env_file:
      - ./.env
  db:
    image: postgres:13-alpine
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - '8001:5432'
    env_file:
      - ./.env

volumes:
  postgres_data: